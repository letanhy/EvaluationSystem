@model CategoryViewModel
@using EvaluationSystem.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Content -->

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold py-3 mb-4"><span class="text-muted fw-light">Forms/</span> Horizontal Layouts</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                    <h5 class="mb-0">Trang thêm học kỳ</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("CreateSemester", "Category", FormMethod.Post))
                    {
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Tên học kỳ</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", style = "" })
                                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Mã học kỳ</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Code, new { @class = "form-control", style = "" })
                                @Html.ValidationMessageFor(x => x.Code, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            <label class="col-sm-2 col-form-label">Số thứ tự học kỳ</label>
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.OrderNo, new { @class = "form-control", style = "", type = "number" })
                                @Html.ValidationMessageFor(x => x.OrderNo, null, new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Lưu</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<!-- / Content -->
<!-- Footer -->
