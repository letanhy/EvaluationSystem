@model MajorsViewModel
@using EvaluationSystem.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold mb-4">Chi tiết ngành: <span class="text-success">@Model.Name</span></h4>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <!-- Notifications -->
                <div class="table-responsive">
                    <table class="table table-striped table-borderless border-bottom">
                        <tbody>
                            <tr>
                                <td>Tên ngành</td>
                                <td>@Model.Name</td>
                            </tr>
                            <tr>
                                <td>Mã ngành</td>
                                <td>@Model.Code</td>
                            </tr>
                            <tr>
                                <td>Ngày tạo</td>
                                <td>@Model.CreatedDate</td>
                            </tr>
                            <tr>
                                <td>Khoa</td>
                                <td>@Model.FacultyName</td>
                            </tr>
                            <tr>
                                <td>Mã khoa</td>
                                <td>@Model.FacultyCode</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <!-- /Notifications -->
            </div>
        </div>
    </div>
</div>

