@model StudentViewModel
@using EvaluationSystem.Models;
@{
    var isPop = Request["IsPopup"];
    Layout = "~/Views/Shared/" + (isPop == null ? "_Layout.cshtml" : "_PopupLayout.cshtml");
}


<!-- Content -->

<div>
    <div class="row">
        <div class="col-sm-10 card-header  align-items-center justify-content-between" style="text-align: center">
            <h4 class="mb-0">Sinh viên mới</h4>
        </div>
    </div>
    @using (Html.BeginForm("Create", "Student", FormMethod.Post))
    {
        <div class="row mb-3">
            @Html.LabelFor(x => x.FullName, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.FullName, new { @class = "form-control", style = "" })
                @Html.ValidationMessageFor(x => x.FullName, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mb-3">
            @Html.LabelFor(x => x.Age, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Age, new { @class = "form-control", style = "", type = "number" })
                @Html.ValidationMessageFor(x => x.Age, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mb-3">
            @Html.LabelFor(x => x.Code, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Code, new { @class = "form-control", style = "" })
                @Html.ValidationMessageFor(x => x.Code, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row mb-3">
            @Html.LabelFor(x => x.ClassId, new { @class = "col-sm-2 col-form-label" })
            <div class="col-sm-10">
                @Html.DropDownListFor(x => x.ClassId, Model.ClassList, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.ClassId, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="row">
            <div class="col-sm-10" style="text-align: center">
                <button type="submit" class="btn btn-primary">Lưu</button>
            </div>
        </div>
    }

</div>
<!-- / Content -->
<!-- Footer -->