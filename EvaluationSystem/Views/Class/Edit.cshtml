@model ClassViewModel
@using EvaluationSystem.Models;
@{
    Layout = Layout = "~/Views/Shared/" + (Request["IsPopup"] == null ? "_Layout.cshtml" : "_PopupLayout.cshtml"); ;
}


<!-- Content -->


                
<div>
    <div class="row">
        <div class="col-sm-10 card-header  align-items-center justify-content-between" style="text-align: center">
            <h4 class="mb-0">Cập nhật Lớp</h4>
        </div>
    </div>
        @using (Html.BeginForm("Edit", "Class", FormMethod.Post))
        {
           <input name="IsPopup" type="hidden" value="@Request["IsPopup"]"/>
            @Html.HiddenFor(x => x.Id)
            <div class="row mb-3">
                @Html.LabelFor(x => x.Name, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", style = "" })
                    @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-3">
                @Html.LabelFor(x => x.Code, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.TextBoxFor(x => x.Code, new { @class = "form-control", style = "" })
                    @Html.ValidationMessageFor(x => x.Code, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row mb-3">
                @Html.LabelFor(x => x.MajorsId, new { @class = "col-sm-2 col-form-label" })
                <div class="col-sm-10">
                    @Html.DropDownListFor(x => x.MajorsId, Model.MajorsList, new { @class = "form-select" })
                    @Html.ValidationMessageFor(x => x.MajorsId, null, new { @class = "text-danger" })
                </div>
            </div>
            <div class="row">
                <div class="col-sm-10" style="text-align: center">
                    <button type="submit" class="btn btn-primary">Lưu</button>
                </div>
            </div>
        }
    </div>
    <!-- / Content -->
    <!-- Footer -->
