@model ClassViewModel
@using EvaluationSystem.Models;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl flex-grow-1 container-p-y">
    <h4 class="fw-bold mb-4">Thêm lớp</h4>

    <!-- Basic Layout & Basic with Icons -->
    <div class="row">
        <!-- Basic Layout -->
        <div class="col-xxl">
            <div class="card mb-4">
                <div class="card-header d-flex align-items-center justify-content-between">
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Create", "Class", FormMethod.Post))
                    {
                        <div class="row mb-3">
                            @Html.LabelFor(x => x.Code, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Code, new { @class = "form-control", style = "" })
                                @Html.ValidationMessageFor(x => x.Code, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            @Html.LabelFor(x => x.Name, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", style = "" })
                                @Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row mb-3">
                            @Html.LabelFor(x => x.MajorsId, new { @class = "col-sm-2 col-form-label" })
                            <div class="col-sm-10">
                                @Html.DropDownListFor(x => x.MajorsId, Model.MajorsList, new { @class = "form-select" })
                                @Html.ValidationMessageFor(x => x.MajorsId, null, new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="row justify-content-end">
                            <div class="col-sm-10">
                                <button type="submit" class="btn btn-primary">Send</button>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
                    <!-- / Content -->
                    <!-- Footer -->

